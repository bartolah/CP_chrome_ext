{
  "manifest_version": 3,
  "name": "Crowdpac Post Creator",
  "version": "1.0",
  "description": "Create a new post on Crowdpac.com using the current page's information.",
  "permissions": ["scripting", "tabs", "activeTab"],
  "host_permissions": ["https://crowdpac.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}